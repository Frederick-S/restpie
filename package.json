{
  "name": "restpie",
  "private": true,
  "version": "1.0.0",
  "author": "Archy <archy@archgpt.dev>",
  "description": "RestPie is a cross-platform REST client, built on top of Electron.",
  "license": "MIT",
  "repository": "https://github.com/ArchGPT/restpie",
  "bugs": {
    "url": "https://github.com/ArchGPT/restpie/issues"
  },
  "homepage": "https://github.com/ArchGPT/restpie#readme",
  "engines": {
    "node": ">=18.18.2",
    "npm": ">=8.19.0"
  },
  "workspaces": [
    "packages/restpie-testing",
    "packages/restpie-send-request",
    "packages/restpie",
    "packages/restpie-smoke-test"
  ],
  "scripts": {
    "dev": "npm start --workspace=packages/restpie",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint:markdown": "npx markdownlint-cli2 \"**/*.md\" \"#**/node_modules\"",
    "clean": "git clean -dfX",
    "watch:app": "npm run build:main.min.js --workspace=packages/restpie && npm run start:dev-server --workspace=packages/restpie",
    "app-build": "npm run build --workspace=packages/restpie",
    "app-package": "npm run package --workspace=packages/restpie",
    "test:smoke:dev": "npm run test:dev --workspace=packages/restpie-smoke-test -- --project=Smoke",
    "test:smoke:build": "npm run test:build --workspace=packages/restpie-smoke-test -- --project=Smoke",
    "test:smoke:package": "npm run test:package --workspace=packages/restpie-smoke-test -- --project=Smoke",
    "test:smoke:cli": "npm run test:cli --workspace=packages/restpie-smoke-test",
    "changelog-image": "esr ./scripts/changelog-image/changelog-image.ts",
    "download-all-npm-plugins": "esr ./scripts/download-all-npm-plugins.ts"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@jest/globals": "^28.1.0",
    "@jest/types": "^28.1.0",
    "@types/chai": "^4.3.5",
    "@types/eslint": "^8.4.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.3",
    "@types/svgo": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "esbuild": "^0.16.0",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.44.0",
    "eslint-config-helpers": "^1.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^28.1.0",
    "svg-text-to-path": "^1.1.2",
    "svgo": "^2.8.0",
    "ts-jest": "^28.0.1",
    "tslib": "2.0.1",
    "type-fest": "^2.12.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10"
  }
}
